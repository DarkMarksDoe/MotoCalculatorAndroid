<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    style="@style/Theme.AppCompat.NoActionBar"
    tools:context=".MainActivity">

    <!--Linear de Textos-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_operacion"
            android:text="@string/st_tv_operacion"
            android:textStyle="bold"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/tv_resul"
            android:text="@string/st_tv_resul"
            android:textStyle="italic"
            android:textSize="24sp"
            android:gravity="center"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:ignore="RtlCompat"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <!--Linear de botones-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="@color/fondos">
        <!--Linear de botones numeros-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="4"
            android:background="@color/layoutLandscape">
            <LinearLayout
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">

            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textStyle=""
                android:textSize="25sp"
                android:background="@android:color/transparent"/>
                <Button
                    android:id="@+id/btn8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="8"
                    android:textSize="25sp"
                    android:background="@android:color/transparent"/>
                <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                    android:textSize="25sp"
                    android:background="@android:color/transparent"/>


            </LinearLayout>
            <LinearLayout
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">
                <Button
                    android:id="@+id/btn4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="4"
                    android:textSize="25sp"
                    android:background="@android:color/transparent"/>
                <Button
                    android:id="@+id/btn5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="5"
                    android:textSize="25sp"
                    android:background="@android:color/transparent"/>
                <Button
                    android:id="@+id/btn6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="6"
                    android:textSize="25sp"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">
                <Button
                    android:id="@+id/btn1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="25sp"
                    android:background="@android:color/transparent"/>
                <Button
                    android:id="@+id/btn2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2"
                    android:textSize="25sp"
                    android:background="@android:color/transparent"/>
                <Button
                    android:id="@+id/btn3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="3"
                    android:textSize="25sp"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">
                <Button
                    android:id="@+id/btn0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="25sp"
                    android:background="@android:color/transparent"/>
                <Button
                    android:id="@+id/btnPunto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="."
                    android:textSize="25sp"
                    android:background="@android:color/transparent"/>
                <Button
                    android:id="@+id/btnNo3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="25sp"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
            </LinearLayout>
        <!--Linear de botones de operaciones-->
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="4"
            android:background="@color/layoutLandscape"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="2" >
                <Button
                    android:id="@+id/btnSobre"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="รท"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/holo_blue_dark"/>

                <ImageButton
                    android:id="@+id/btnCE"
                    android:src="@drawable/deleteblue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:adjustViewBounds="true"
                    android:padding="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="2" >
                <Button
                    android:id="@+id/btnPor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/button_dot"
                    android:textSize="20dp"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/holo_blue_dark"/>
                <Button
                    android:id="@+id/btnNo1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="25sp"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/holo_blue_dark"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="2" >
                <Button
                    android:id="@+id/btnMenos"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="-"
                    android:textSize="30sp"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/holo_blue_dark"/>
                <Button
                    android:id="@+id/btnNo2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="15sp"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/holo_blue_dark"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="2" >

                <Button
                    android:id="@+id/btnMas"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="@string/button_plus"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btnRaiz"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="="
                    android:textSize="25sp"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/holo_blue_dark"/>
            </LinearLayout>
        </LinearLayout>
        <!--Linear de botones de funciones-->
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="5"
            android:background="@color/funciones">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3" >
                <Button
                    android:id="@+id/btnINV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="INV"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"/>
                <Button
                    android:id="@+id/btnRAD"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="rad"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"/>
                <Button
                    android:id="@+id/btnMOD"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="%"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3" >
                <Button
                    android:id="@+id/btnSENO"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="sin"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"/>
                <Button
                    android:id="@+id/btnCOS"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="cos"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"/>
                <Button
                    android:id="@+id/btnTAN"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="tan"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3" >
                <Button
                    android:id="@+id/btnLn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="ln"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"/>
                <Button
                    android:id="@+id/btnLOG"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="log"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"/>
                <Button
                    android:id="@+id/btnRAIZ"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/button_raiz"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3" >
                <Button
                    android:id="@+id/btnPi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/button_pi"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"/>
                <Button
                    android:id="@+id/btnE"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="e"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"/>
                <Button
                    android:id="@+id/btnPot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="^"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3" >
                <Button
                    android:id="@+id/btnParIz"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="("
                    android:textSize="20sp"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"/>
                <Button
                    android:id="@+id/btnParDer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=")"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"/>
                <Button
                    android:id="@+id/btnFact"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="!"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>